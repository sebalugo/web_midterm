<p id="notice"><%= notice %></p>

  <div class="field">
    <strong>Name: </strong><%= @teacher.name%><br>
  </div>

  <div class="field">
    <strong>Identity: </strong><%= @teacher.identity%><br>
  </div>

  <div class="field">
    <strong>Active Subjects: </strong><%= @teacher.active_subjects%><br>
  </div>

<%= form_for(@teacher) do |f| %>
  <% if @teacher.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@teacher.errors.count, "error") %> prohibited this teacher from being saved:</h2>

      <ul>
      <% @teacher.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <strong>Subjects: </strong><br><br> 

  <%= f.fields_for :subjects do |sub| %>

    <%= sub.label :name %><br>
    <%= sub.text_field :name %><br>

    <%= sub.label :identity %><br>
    <%= sub.text_field :identity %><br>

    <strong>Status </strong><br>
    <%= sub.text_field :active %><br>

    <br><br>

  <% end %>

  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>

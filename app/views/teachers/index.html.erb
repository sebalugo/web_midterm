<p id="notice"><%= notice %></p>

<div class="jumbotron">
  <h1>Listing teachers</h1>
</div>


<%= form_tag '',method: "get" do%>
  
  <%= submit_tag 'OrderNames' , :class => "btn btn-default"%>
  <%= submit_tag 'OrderSubjects' , :class => "btn btn-default"%>

<%end%>

<br>


<table class="table table-striped">
  <thead>
    <tr>
      <th>Name &nbsp</th>
      <th>Identity &nbsp</th>
      <th>ActiveSubjects &nbsp</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @teachers.each do |teacher| %>
      <tr>
        <td><%= teacher.name %>&nbsp</td>
        <td><%= teacher.identity %>&nbsp</td>
        <td><%= teacher.active_subjects %>&nbsp</td>
        <td><%= link_to 'Show', teacher ,:class => "btn btn-default"%></td>
        <td><%= link_to 'Edit', edit_teacher_path(teacher) ,:class => "btn btn-default"%></td>
        <td><%= link_to 'Destroy', teacher, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-mini btn-danger'%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Teacher', new_teacher_path , :class => 'btn btn-primary' %>

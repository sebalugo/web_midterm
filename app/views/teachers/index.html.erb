<style>
table,th,td
{
border:1px solid black;
}
</style>

<p id="notice"><%= notice %></p>

<h1>Listing teachers</h1>


<%= form_tag '',method: "get" do%>
  
  <%= submit_tag 'OrderNames'%>
  <%= submit_tag 'OrderSubjects'%>

<%end%>

<br>


<table>
  <thead>
    <tr>
      <th>Name &nbsp</th>
      <th>Identity &nbsp</th>
      <th>ActiveSubjects &nbsp</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @teachers.each do |teacher| %>
      <tr>
        <td><%= teacher.name %>&nbsp</td>
        <td><%= teacher.identity %>&nbsp</td>
        <td><%= teacher.active_subjects %>&nbsp</td>
        <td><%= link_to 'Show', teacher %></td>
        <td><%= link_to 'Edit', edit_teacher_path(teacher) %></td>
        <td><%= link_to 'Destroy', teacher, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Teacher', new_teacher_path %>
